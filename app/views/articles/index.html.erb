<h1> Instapost </h1>
<%= link_to 'Home', controller: 'articles' %>
<%= link_to 'New Post', new_article_path %>

<h2>How was your day?</h2>
<%= form_with scope: :article, url: articles_path, local: true do |form| %>
	<p>
		<%= form.label :title %><br>
		<%= form.text_field :title %>
	</p>

	<p>
		<%= form.label :post %><br>
		<%= form.text_area :post %>
	</p>

	<p>
		<%= form.label :author %><br>
		<%= form.text_area :author %>
	</p>

		<p>
			<%= form.label :Photo_URL %><br>
			<%= form.text_area :photo_url %>
		</p>

		<p>
			<%= form.label :Add_a_caption %><br>
			<%= form.text_area :caption %>
		</p>

		<p>
			<%= form.label :date_taken %><br>
			<%= form.text_area :date_taken, value: DateTime.now.strftime("%d/%m/%Y %H:%M") %>
		</p>

	<p>
		<%= form.submit "Post!" %>
	</p>
<% end %>

<table>
  <!-- <tr>
    <th>Title</th>
    <th>Post</th>
    <th>Author</th>
    <th>Photo</th>
    <th>Date Taken</th>
    <th></th>
  </tr>
 -->
  <% @articles.each do |article| %>
    <tr>
      <td><h3><%= article.title %></h3></td>
     </tr>
     <tr>
      <td><%= article.post %></td>
     </tr>
     <tr>
      <td>by <%= article.author %></td>
     </tr>
     <tr>
      <td><img src=<%= article.photo_url %> style="max-width:300px" /></td>
     </tr>
     <tr>
      <td><%= article.date_taken %></td>
     </tr>
     <tr>
      <td><%= link_to 'Show', article_path(article) %>
      <%= link_to 'Edit', edit_article_path(article) %>
      <%= link_to 'Delete', article_path(article),
        method: :delete,
        data: { confirm: 'Really Meh?' } %></td>
    </tr>
  <% end %>
</table>