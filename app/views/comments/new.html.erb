<h1>Comment</h1>
<%= form_with scope: :comment, url: comments_path, local: true do |form| %>

	<%= form.collection_select :article_id, @articles, :id, :title %>
	<p>
		<%= form.label :Comment %><br>
		<%= form.text_field :content %>
	</p>

	<p>
		<%= form.submit %>
	</p>
<% end %>

<%= link_to 'Back', articles_path %>